<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:alpha="255"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/history_workout_nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout A1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history_workout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="19 Sep 2019"
                android:textSize="12sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingEnd="30dp">

                        <ImageView
                            android:id="@+id/history_time_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            tools:srcCompat="@tools:sample/avatars[2]" />

                        <TextView
                            android:id="@+id/history_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h 5m" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingEnd="30dp">

                        <ImageView
                            android:id="@+id/history_volume_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            tools:srcCompat="@tools:sample/avatars[0]" />

                        <TextView
                            android:id="@+id/history_volume_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11,330kg" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/history_exercises_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/history_workout_exercises"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/history_bestset_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/history_workout_best_set"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/history_workout_exercises"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="1 x Strict Military Press\n2 x Arnold Press\n2 x Incline Bemcj Press\n3 x Chest Fly\n3 x Hammer Curl\n3 x Lateral Raise"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/history_workout_sets_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="100kg x 6\n100kg x 6\n100kg x 6\n100kg x 6\n100kg x 6\n100kg x 6\n"
                        android:textSize="12sp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" >
    </Space>

</LinearLayout>