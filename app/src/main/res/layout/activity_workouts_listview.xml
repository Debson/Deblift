<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="255"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/workout_nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout A1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/workout_moreButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:background="@drawable/ic_menu_black_24dp"
            android:foreground="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/workout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Last performed: 19 Sep 2019"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/workout_exercises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 x Strict Military Press\n2 x Arnold Press\n2 x Incline Bemcj Press\n3 x Chest Fly\n3 x Hammer Curl\n3 x Lateral Raise"
            android:textSize="12sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</LinearLayout>